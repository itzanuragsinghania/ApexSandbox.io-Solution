public boolean isSorted(List<Integer> numbers) {
    //code here
    if(numbers.size()<=2)
    {
        return true;
    }
    for(Integer i=1;i<numbers.size()-1;i++)
    {
         if (!(numbers[i-1]<=numbers[i] && numbers[i]<=numbers[i+1] || numbers[i-1]>=numbers[i] && numbers[i]>=numbers[i+1] )){
            return False;
        }
    }
    
    return True;
    }         